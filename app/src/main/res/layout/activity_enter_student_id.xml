<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pethoalpar.zxingexample.EnterStudentID">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:paddingTop="20dp"
        android:paddingBottom="390dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentid"
        android:inputType="number"
        android:hint="Matric No"
        android:maxLength="6"
        android:textSize="18sp"
        android:layout_marginTop="160dp"
        android:layout_alignLeft="@+id/buttonEnter"
        android:layout_alignStart="@+id/buttonEnter"
        android:layout_alignRight="@+id/buttonEnter"
        android:layout_alignEnd="@+id/buttonEnter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/buttonEnter"
        android:layout_below="@+id/studentid"
        android:layout_centerHorizontal="true"
        android:onClick="buttonEnter" />

    <ImageView
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/buttonEnter"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Name: "
        android:id="@+id/studentname"
        android:layout_marginTop="25dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/buttonEnter"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="name"-->
        <!--android:id="@+id/textname"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="25dp"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:textSize="20dp"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_below="@+id/buttonEnter" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:id="@+id/buttonConfirm"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/studentname"
        android:layout_centerHorizontal="true"
        android:onClick="buttonConfirm" />

    </RelativeLayout>
